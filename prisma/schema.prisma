generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          String    @default("user")
  lastLoginAt   DateTime?
  isActive      Boolean   @default(true)

  accounts     Account[]
  postmen      Postman[]
  interactions Interaction[]
  dailyLogs    DailyLog[]
  weeklyPlans  WeeklyPlan[]
  adminLogs    AdminLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Postman {
  id          String   @id @default(cuid())
  userId      String
  name        String
  company     String?
  position    String?
  phone       String?
  email       String?
  category    String   @default("포스트맨")
  giveScore   Int      @default(0)
  takeScore   Int      @default(0)
  lastContact DateTime?
  notes       String?  @db.Text
  profileImage  String?
  relationship          String?
  stage                 String   @default("첫만남")
  age                   Int?
  gender                String?
  region                String?
  strengths             String?
  interests             String?
  goals                 String?  @db.Text
  businessSummary       String?  @db.Text
  lifePurpose           String?  @db.Text
  meetingCount          Int?     @default(0)
  communicationMeetings Int?     @default(0)
  communicationLetters  Int?     @default(0)
  communicationSNS      Int?     @default(0)
  communicationGifts    Int?     @default(0)
  birthday              DateTime?
  anniversary           DateTime?
  anniversaryLabel      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactions Interaction[]

  @@index([userId])
}

model Interaction {
  id          String   @id @default(cuid())
  postmanId   String
  userId      String
  type        String
  category    String
  description String   @db.Text
  date        DateTime @default(now())
  createdAt   DateTime @default(now())

  postman     Postman  @relation(fields: [postmanId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postmanId])
  @@index([userId])
  @@index([date])
}

model DailyLog {
  id           String   @id @default(cuid())
  userId       String
  date         DateTime @db.Date
  content      String   @db.Text
  goals        String?  @db.Text
  achievements String?  @db.Text
  bookTitle        String?
  letterCount      Int?     @default(0)
  callCount        Int?     @default(0)
  snsCount         Int?     @default(0)
  giftCount        Int?     @default(0)
  insight          String?  @db.Text
  productiveWork   String?  @db.Text
  infoToConvey     String?  @db.Text
  infoRecipient    String?
  successReason    String?  @db.Text
  myStrengths      String?  @db.Text
  habitsToDiscard  String?  @db.Text
  todayAchievement String?  @db.Text
  achievementSource String?
  gratitude        String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model WeeklyPlan {
  id          String   @id @default(cuid())
  userId      String
  weekStart   DateTime @db.Date
  plan1       String?  @db.Text
  plan2       String?  @db.Text
  plan3       String?  @db.Text
  status1     String   @default("TODO")
  status2     String   @default("TODO")
  status3     String   @default("TODO")
  name1           String?
  phone1          String?
  purpose1        String?
  location1       String?
  meetDate1       String?
  meetTime1       String?
  myBusiness1     String?  @db.Text
  theirBusiness1  String?  @db.Text
  theirInterest1  String?
  isPlus1         Boolean  @default(false)
  mealCheck1      String?
  name2           String?
  phone2          String?
  purpose2        String?
  location2       String?
  meetDate2       String?
  meetTime2       String?
  myBusiness2     String?  @db.Text
  theirBusiness2  String?  @db.Text
  theirInterest2  String?
  isPlus2         Boolean  @default(false)
  mealCheck2      String?
  name3           String?
  phone3          String?
  purpose3        String?
  location3       String?
  meetDate3       String?
  meetTime3       String?
  myBusiness3     String?  @db.Text
  theirBusiness3  String?  @db.Text
  theirInterest3  String?
  isPlus3         Boolean  @default(false)
  mealCheck3      String?
  meetingNote1     String?  @db.Text
  nextAction1     String?
  meetingNote2     String?  @db.Text
  nextAction2     String?
  meetingNote3     String?  @db.Text
  nextAction3     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([userId])
  @@index([weekStart])
}


model Notice {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdminLog {
  id        String   @id @default(cuid())
  adminId   String
  action    String
  detail    String?  @db.Text
  createdAt DateTime @default(now())

  admin     User     @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([createdAt])
}
